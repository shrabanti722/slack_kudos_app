{
  "name": "slack-kudos-bot",
  "version": "1.0.0",
  "description": "Slack bot for sending kudos to team members",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "dev:frontend": "vite",
    "build": "vite build",
